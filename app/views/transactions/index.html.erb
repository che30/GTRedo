
<% content_for :transactionGroups do %>
<nav class="NavBackGround d-flex py-1 align-items-center">
  <%= render 'shared/dropdown' %>
<div class="text-white marginTG ">Transactions</div>
</nav>
<% end %>
<section class="main-section">


<section class="transactionGroup  pt-3">
  <div class="d-flex justify-content-between container-fluid bg-white py-2">
    <div>Total  amount</div>
    <div> <span>$</span> <%=sum_amount(@transactions)%></div>
  </div>
</section>
<section class="d-flex justify-content-between container-fluid  py-3 mt-3  bg-white  w-100 tisectiontwo">
<% @transactions.each do |transaction| %>
<%= link_to(transaction_url(transaction.id), class: "text-decoration-none text-dark") do %>
  <div class="d-flex justify-content-between align-items-center">
  
 
      
  <div class=" imagediv">   <%= image_tag(transaction.group.avatar,class:"transactionImg rounded ") %>


  </div>
  
    <div class="d-flex flex-column justify-content-between  w-100">
      <div> <span class="text-success ml-1 ">Name:</span> <span><%= transaction.name%></span></div>
      <div><span class="text-success ml-1 ">Date created:</span><span><%=transaction.created_at.strftime('%d %b %Y at %l:%M%P')%></span></div>
      <div class="transactionGroupCreato">
      <span class="text-success">Creator:</span> <span><%=transaction.user.name%></span>
      </div>
    </div>
</div>

<% end %>
<% end %>

  <div class="amount">
 <% @transactions.each do |transaction| %>
  <span> <span>$</span><span><%=transaction.amount%></span></span>
  <% end %>
  
  </div>
  </section>
</section>
 <div class="fivefb py-3 tGButton text-center">
        <%= link_to 'new transaction', new_transaction_path , class:'btn btn-transact text-white  border w-50 py-3 ' %>
</div>
